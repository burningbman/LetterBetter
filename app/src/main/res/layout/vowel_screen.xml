<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewPickAVowel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/pick_a_vowel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bottom_padding"
        android:layout_marginRight="@dimen/bottom_padding" >

        <com.cor31.widget.LetterButton
            android:id="@+id/letterButton1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="@dimen/letter_size"
            android:layout_margin="@dimen/board_padding"
            android:text="A"
            android:layout_weight="1"
            android:onClick="onVowelClicked"
            custom:isBuyingVowel="true"/>

        <com.cor31.widget.LetterButton
            android:id="@+id/letterButton2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="@dimen/letter_size"
            android:layout_margin="@dimen/board_padding"
            android:text="E"
            android:layout_weight="1"
            android:onClick="onVowelClicked"
            custom:isBuyingVowel="true"/>

        <com.cor31.widget.LetterButton
            android:id="@+id/letterButton3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="@dimen/letter_size"
            android:layout_margin="@dimen/board_padding"
            android:text="I"
            android:layout_weight="1"
            android:onClick="onVowelClicked"
            custom:isBuyingVowel="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bottom_padding"
        android:layout_marginRight="@dimen/bottom_padding" >

        <com.cor31.widget.LetterButton
            android:id="@+id/letterButton4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="@dimen/letter_size"
            android:layout_margin="@dimen/board_padding"
            android:text="O"
            android:layout_weight="1"
            android:onClick="onVowelClicked" 
            custom:isBuyingVowel="true"/>

        <com.cor31.widget.LetterButton
            android:id="@+id/letterButton5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="@dimen/letter_size"
            android:layout_margin="@dimen/board_padding"
            android:text="U"
            android:layout_weight="1"
            android:onClick="onVowelClicked"
            custom:isBuyingVowel="true"/>

        <com.cor31.widget.LetterButton
            android:id="@+id/letterButton6"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:maxWidth="@dimen/letter_size"
            android:layout_margin="@dimen/board_padding"
            android:text="Y"
            android:layout_weight="1"
            android:onClick="onVowelClicked"
            custom:isBuyingVowel="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:onClick="onVowelCancel" />

</LinearLayout>
